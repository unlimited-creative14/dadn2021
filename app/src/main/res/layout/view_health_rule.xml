<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/childRuleAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a6dfdfdf"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="5sp"
            android:id="@+id/line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textSize="20sp"
                android:text="Muc do: " />

            <Spinner
                android:id="@+id/ruleActionsSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <ImageView
                android:id="@+id/led_preview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:contentDescription="Den LED" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a6dfdfdf"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="5sp"
            android:id="@+id/line_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Nhiet do: "
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="16sp"
                        android:text="Tu"/>
                    <EditText
                        android:id="@+id/et_tempFrom"
                        android:layout_width="30dp"
                        android:layout_weight="0.6"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="16sp"
                        android:text="Den"/>
                    <EditText
                        android:id="@+id/et_tempTo"
                        android:layout_width="30dp"
                        android:layout_weight="0.6"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"/>
                </LinearLayout>
                <Spinner
                    android:id="@+id/ruleDegUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a6dfdfdf"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="5sp"
            android:id="@+id/line_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Thoi luong: "
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="16sp"
                        android:text="Tu"/>
                    <EditText
                        android:id="@+id/et_timeFrom"
                        android:layout_width="30dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:background="@android:drawable/edit_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="16sp"
                        android:text="Den"/>
                    <EditText
                        android:id="@+id/et_timeTo"
                        android:layout_width="30dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:background="@android:drawable/edit_text"/>
                </LinearLayout>
                <Spinner
                    android:id="@+id/ruleTimeUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a6dfdfdf"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="5sp"
            android:id="@+id/line_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_3">
            <Button
                android:id="@+id/btnResetRule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_margin="10dp"
                android:text="Reset/Xoa"/>
            <Button
                android:id="@+id/btnUpdateRule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_margin="10dp"
                android:text="Cap nhat"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>